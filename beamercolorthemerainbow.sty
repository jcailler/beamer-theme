\setbeamercolor*{title}{fg=black}

\setbeamercolor*{normal text}{fg=black}
\setbeamercolor*{background canvas}{bg=bgcolor!15}
\setbeamercolor*{frametitle}{bg=nightblue, fg=oldwhite}

\setbeamercolor*{itemize item}{fg=darkblue}
\setbeamercolor*{enumerate item}{fg=darkblue}
\setbeamercolor*{description item}{fg=darkblue}

\setbeamercolor*{footline}{fg=black}%, bg=oldwhite}
% \setbeamercolor*{footline separator}{fg=green}

\setbeamercolor*{block title}{fg=blue}
\setbeamercolor*{block title alerted}{fg=red}
\setbeamercolor*{block title example}{fg=green}
\BeforeBeginEnvironment{lemma}{
	\setbeamercolor*{block title}{fg=orange}
}
\BeforeBeginEnvironment{theorem}{
	\setbeamercolor*{block title}{fg=pink}
}
\BeforeBeginEnvironment{definition}{
	\setbeamercolor*{block title}{fg=blue}
}
\setbeamercolor*{proof title}{fg=violet}
\setbeamercolor*{qed symbol}{parent=proof title}

\setbeamercolor*{button}{bg=violet,fg=oldwhite}
\setbeamercolor*{button border}{bg=violet!40,fg=oldwhite}